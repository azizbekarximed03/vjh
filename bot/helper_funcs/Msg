# ot imeni bota soobsheniye

@bot.message_handler(is_admin = True, commands= [ 'msg'])

def del_msg(message):

    try:

        if not message.reply_to_message:

            bot.delete_message(message.chat.id, message.message.id)

            ms = message.text.split(' ')

            p2 = list(ms[+1:]) # udalyayem nujniy element eto unas perviy, tochneye komanda  na tekste, primer >> print(t2)

            p3 = " ".join(p2)

            bot.send_message(message.chat.id, text= p3)

        else:

            bot.delete_message(message.chat.id, message.id)

            ms = message.text.split(' ')

            p2 = list(ms[+1:]) # udalyayem nujniy element eto unas perviy, tochneye komanda  na tekste, primer >> print(t2)

            p3 = " ".join(p2)

            bot.send_message(message.chat.id, reply_to_message_id = message.reply_to_message.id, text= p3)

    except Exception as e:

        bot.reply_to(message, e)
